/* Header */

@mixin header-transition($property: all){
  @include transition($property, 350ms, cubic-bezier(0.46, 0.01 , 0.32, 1));
}

.header{
  position: relative;
  width: 100%;
  z-index: 5;
  @include clear();
  .bar{
    padding: $header_padding_top $page_padding;
    position: relative;
    z-index: 100;
    &.fixed{
      display: none;
      @include header-transition(background-color);
    }
    .center{
      position: relative;
      left: 0;
      width: 100%;
      text-align: center;
      z-index: 1;
      line-height: 0;
      @include header-transition(top);
      a.logo{
        text-decoration: none;
        display: inline-block;
        max-width: 70%;
      }
    }
    .left, .right{
      height: $header_icons_height;
      z-index: 10;
      line-height: 0;
    }
    .left{
      position: absolute;
      left: 19px;
      @include header-transition(left);
      a{
        text-decoration: none;
        i{
          color: $color_body_text;
          font-size: 30px;
        }
      }
    }
    .right{
      position: absolute;
      right: 19px;
      text-align: right;
      @include header-transition(right);
      a{
        text-decoration: none;
        i{
          color: $color_body_text;
          font-size: 30px;
        }
        .circle{
          text-align: center;
          @include font-accent(13px, $color_accent_neg, 700);
          text-transform: none;
          background: $color_accent;
          border-radius: 50%;
          width: $header_icons_height;
          height: $header_icons_height;
          font-size: 13px;
          line-height: $header_icons_height;
          display: inline-block;
          vertical-align: top;
          margin-left: 4px;
          &.hidden-count{
            display: none;
          }
        }
      }
      .currency-picker{
        display: block;
        margin-top: 2px;
        @include font-loading-transition();
        select{
          @include font-accent(14px, $color_body_text);
        }
      }
    }
  }
  .background{
    background-color: $color_pages_bg;
    position: absolute;
    top: $page_padding;
    left: $page_padding;
    right: $page_padding;
    bottom: 0;
  }
  .top-banner {
    position: relative;
    z-index: 5;
    text-align: center;
    background: $color_top_banner_bg;
    padding: 8px $page_padding;
