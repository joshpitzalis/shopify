// animation

@mixin default-transition($property: all, $delay: 0s){
  @include transition($property, 200ms, cubic-bezier(0.2, 0.3, 0.25, 0.9), $delay);
}

@mixin font-loading-transition(){
  opacity: 0;
  @include default-transition(opacity);
  .fonts-loaded &, .no-js &{
    opacity: 1;
  }
}


