@mixin font-header($size, $color: $color_body_text, $weight: 400, $line_height_inc: 0){
  font-family: {{ header_family }};
  font-style: normal;
  color: $color;
  font-weight: $weight;
  text-transform: {{ settings.type_header_text_transform }};
  @include size-header($size, $line_height_inc);
}

@mixin size-header($size, $line_height_inc: 0){
  $size: round($size {{ settings.type_header_text_size }});
  font-size: $size;
  @if $line_height_inc > 0 { line-height: $size + $line_height_inc; }
}

@mixin font-accent($size, $color: $color_accent, $weight: 400, $line_height_inc: 0){
