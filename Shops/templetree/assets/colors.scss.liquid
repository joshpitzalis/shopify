  display: inline;
}

.btn{
  text-decoration: none;
  cursor: pointer;
  @include font-buttons(18px, $color_body_text, 700);
  display: inline-block;
  text-align: center;
  padding: 10px;
  background: transparent;
  border: 0;
  @include default-transition(background);
  @include default-transition(color);
  @include default-transition(border-color);
  &:before, &:after{
    @include default-transition(background);
    @include default-transition(color);
    @include default-transition(border-color);
  }
  &.border{
    border: 3px solid;
    &:hover{
      color: lighten($color_body_text, 20%);
      border-color: lighten($color_body_text, 20%);
      &:before, &:after{
        border-color: lighten($color_body_text, 20%);
      }
    }
    &.small{
      font-size: 16px;
      padding: 5px;
      border-width: 2px;
    }
  }
  &.solid{
    background: $color_body_text;
    border-color: $color_body_text;
    color: $color_body_text_neg;
    &:hover{
      background: lighten($color_body_text, 5%);
    }
    &.small{
      font-size: 16px;
      padding: 8px;
    }
  }
  &.accent{
    background: $color_accent;
    border-color: $color_accent;
    color: $color_accent_neg;
    @include default-transition(opacity);
    &:hover{
      background: darken($color_accent, 5%);
    }
    &.adding{
      opacity: 0.25;
      cursor: default;
    }
    &.added{
      @include default-transition(opacity, 1s);
      opacity: 1;
    }
    &.small{
      font-size: 16px;
      padding: 8px;
    }
  }
  &.disabled{
    cursor: default;
    @include default-transition(opacity, 0s);
    &:hover{
      color: inherit;
      border-color: inherit;
      background-color: inherit;
    }
  }
}

.shape-wrapper, .circle-wrapper{
  display: inline-block;
}
.shape{
  opacity: 0;
  .no-js & {
    opacity: 1;
  }
  &.shaped{
    opacity: 1;
    &.square{
      &.solid{
        padding: 10px;
        background: $color_body_text;
        border-color: $color_body_text;
        color: $color_body_text_neg;
      }
    }
    &.circle{
      display: table;
      table-layout: fixed;
      span{
        display: table-cell;
        vertical-align: middle;
      }
    }
    &.hexagon {
      position: relative;
      text-align: center;
      display: table;
      text-decoration: none;
      border-collapse: collapse;
      padding: 0;
      &:before, &:after {
        content: "";
        position: absolute;
        z-index: 1;
        background-color: inherit;
      }
      span{
        display: table-cell;
        vertical-align: middle;
        position: relative;
        z-index: 2;
      }
      &.border{
        border-top: 0;
        border-bottom: 0;
        border-width: 3px;
      }
      &.solid{
        border: 0;
        &:before, &:after{
          border-color: transparent;
        }
      }
      &.accent{
        border: 0;
        &:before, &:after{
          border-color: transparent;
        }
      }
    }
  }
}
