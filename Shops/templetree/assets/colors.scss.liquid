      background: lighten($color_top_banner_bg, 5%);
    }
  }
  &.scrolled{
    .bar{
      opacity: 0;
      &.fixed{
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        opacity: 1;
        display: block;
      }
    }
  }
  &.scrolling{
    .fixed{
      .left{
        left: 50px;
      }
      .right{
        right: 50px;
      }
    }
  }
  &.solid{
    .fixed{
      background-color: $color_body_bg;
