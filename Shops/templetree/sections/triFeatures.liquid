    <div class="h2"><img src={{ 'yellowLeaf.svg' | asset_url }} alt="yellow leaves" class="ml4 dn db-ns absolute "></div>
    <img src="{{ section.settings.feature1image | img_url: '32x' }}" alt="" class='center pv3'>
