{% form 'customer_address', address %}
 <h2>{{ 'customer.addresses.edit_address' | t }}:</h2>
 <h3 class="row expanded-top">{{ 'customer.addresses.recipient' | t }}:</h3>
 <div class="row">
   <input type="text" id="address_first_name_{{form.id}}" class="text long" name="address[first_name]" value="{{form.first_name}}" autocapitalize="words" placeholder="{{ 'customer.addresses.first_name' | t }}">
 </div>
 <div class="row">
   <input type="text" id="address_last_name_{{form.id}}" class="text long" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words" placeholder="{{ 'customer.addresses.last_name' | t }}">
 </div>
 <div class="row">
   <input type="text" id="address_company_{{form.id}}" class="text long" name="address[company]" value="{{form.company}}" autocapitalize="words" placeholder="{{ 'customer.addresses.company' | t }}">
 </div>
 <div class="row">
   <input type="tel" id="address_phone_{{form.id}}" class="text long" name="address[phone]" value="{{form.phone}}" placeholder="{{ 'customer.addresses.phone' | t }}">
 </div>
 <h3 class="row expanded-top">{{ 'customer.addresses.address' | t }}:</h3>
 <div class="row">
   <input type="text" id="address_address1_{{form.id}}" class="text long" name="address[address1]" value="{{form.address1}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address1' | t }}">
 </div>
 <div class="row">  
   <input type="text" id="address_address2_{{form.id}}" class="text long" name="address[address2]" value="{{form.address2}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address2' | t }}">
 </div>
 <div class="row">
   <input type="text" id="address_city_{{form.id}}" class="text long" name="address[city]" value="{{form.city}}" autocapitalize="words" placeholder="{{ 'customer.addresses.city' | t }}">
 </div>
 <div class="row">
   <input type="text" id="address_zip_{{form.id}}" class="text long" name="address[zip]" value="{{form.zip}}" autocapitalize="characters" placeholder="{{ 'customer.addresses.zip' | t }}">
 </div>
 <h3 class="row expanded-top">{{ 'customer.addresses.country' | t }}:</h3>
 <div class="row">
   <select id="address_country_{{form.id}}" class="long" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
 </div>
  <h3 class="row expanded-top">{{ 'customer.addresses.province' | t }}:</h3>
 <div id="address_province_container_{{form.id}}" style="display:none" class="row">
   <select id="address_province_{{form.id}}" class="long" name="address[province]" data-default="{{form.province}}"></select>
 </div>
 <h3 class="row expanded-top">{{ 'customer.addresses.set_default_label' | t }}</h3>
 <div class="row checkbox">
   <label for="address_default_address_{{form.id}}">
     {{ form.set_as_default_checkbox }} {{ 'customer.addresses.set_default_action' | t }}
   </label>
 </div>
 <div class="row actions expanded-top">
   <input type="submit" class="btn solid shape square" value="{{ 'customer.addresses.update' | t }}">
 </div>
 <div class="row expanded-top back">
   {% capture link %}
     <a href="#" class="underline" data-action='hide-edit-address' data-address-id='{{form.id}}'>{{ 'customer.addresses.cancel' | t }}</a>
   {% endcapture %}
   {{ 'general.navigation.cancel_html' | t: link: link }}
 </div>
{% endform %}