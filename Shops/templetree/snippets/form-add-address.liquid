{% form 'customer_address', customer.new_address %}
  <h2>{{ 'customer.addresses.add_new' | t }}:</h2>
  <h3 class="row expanded-top">{{ 'customer.addresses.recipient' | t }}:</h3>
  <div class="row">
    <input type="text" id="address_first_name_new" class="text long" name="address[first_name]" value="{{form.first_name}}" autocapitalize="words" placeholder="{{ 'customer.addresses.first_name' | t }}">
  </div>
  <div class="row">
    <input type="text" id="address_last_name_new" class="text long" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words" placeholder="{{ 'customer.addresses.last_name' | t }}">
  </div>
  <div class="row">
    <input type="text" id="address_company_new" class="text long" name="address[company]" value="{{form.company}}" autocapitalize="words" placeholder="{{ 'customer.addresses.company' | t }}">
  </div>
  <div class="row">
    <input type="tel" id="address_phone_new" class="text long" name="address[phone]" value="{{form.phone}}" placeholder="{{ 'customer.addresses.phone' | t }}">
  </div>
  <h3 class="row expanded-top">{{ 'customer.addresses.address' | t }}:</h3>
  <div class="row">
    <input type="text" id="address_address1_new" class="text long" name="address[address1]" value="{{form.address1}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address1' | t }}">
  </div>
  <div class="row">  
    <input type="text" id="address_address2_new" class="text long" name="address[address2]" value="{{form.address2}}" autocapitalize="words" placeholder="{{ 'customer.addresses.address2' | t }}">
  </div>
  <div class="row">
    <input type="text" id="address_city_new" class="text long" name="address[city]" value="{{form.city}}" autocapitalize="words" placeholder="{{ 'customer.addresses.city' | t }}">
  </div>
  <div class="row">
    <input type="text" id="address_zip_new" class="text long" name="address[zip]" value="{{form.zip}}" autocapitalize="characters" placeholder="{{ 'customer.addresses.zip' | t }}">
  </div>
  <h3 class="row expanded-top">{{ 'customer.addresses.country' | t }}:</h3>
  <div class="row">
    <select id="address_country_new" class="long" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
  </div>
  <div id="address_province_container_new" style="display:none">
    <h3 class="row">{{ 'customer.addresses.province' | t }}:</h3>
    <div class="row">
      <select id="address_province_new" class="long" name="address[province]" data-default="{{form.province}}"></select>
    </div>
  </div>
  <h3 class="row expanded-top">{{ 'customer.addresses.set_default_label' | t }}</h3>
  <div class="row checkbox">
    <label for="address_default_address_new">
      {{ form.set_as_default_checkbox }} {{ 'customer.addresses.set_default_action' | t }}
    </label>
  </div>
  <div class="row expanded-top">
    <button type="submit" class="btn solid shape square">
      {{ 'customer.addresses.add_html' | t }}
    </input>
  </div>
  <div class="row">
    {% capture link %}
      <a href="#" class="underline" data-action="hide-new-address">{{ 'customer.addresses.cancel' | t }}</a>
    {% endcapture %}
    {{ 'general.navigation.cancel_html' | t: link: link }}
  </div>
{% endform %}