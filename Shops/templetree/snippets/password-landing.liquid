<div class="landing">
  {% include 'logo' %}
  <h2>{{ 'general.password_page.opening_soon' | t }}</h2>
  {% unless shop.password_message == blank %}
    <h4>{{ shop.password_message | newline_to_br }}</h4>
    <hr/>
  {% endunless %}
  {% if section.settings.newsletter_enable %}
    <div class="email">
      {% include 'form-password-landing' %}
    </div>
  {% endif %}
  {% include 'connect', title: 'general.password_page.social_heading' %}
  <hr class="top">
  <a href="#" class="btn access border small" data-action="show-login">{{ 'general.password_page.password_link_html' | t }}</a>
  <hr>
  <div class="banner">
    {% capture shopify %}
      <a href="//www.shopify.com?ref=guille-lopez" target="_blank">
        {% include 'shopify-svg' %}
        <span>Shopify</span>
      </a>
    {% endcapture %}
    {{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify }}
  </div>
</div>